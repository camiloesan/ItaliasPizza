<Page x:Class="ItaliasPizza.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Login">

    <Grid Background="#34495E">
        <Rectangle HorizontalAlignment="Center" Height="240" VerticalAlignment="Center" Width="240" RadiusX="19.5" RadiusY="19.5" Fill="#FFA4A4A4" StrokeThickness="6"/>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Width="180">
            <Label Content="Correo electrónico" FontSize="14" FontWeight="DemiBold"/>
            <TextBox x:Name="TBoxEmail" KeyDown="EnterKeyEvent" TextWrapping="Wrap" MaxLength="32" Width="184" FontSize="16" Margin="0,5,0,5"/>
            <Label Content="Contraseña" FontSize="14" FontWeight="DemiBold"/>
            <PasswordBox x:Name="TBoxPassword" MaxLength="16" Width="184" FontSize="14" Margin="0,5,0,5" KeyDown="EnterKeyEvent"/>
            <Button Content="Iniciar sesión" Cursor="Hand" Margin="0,15,0,0" Grid.Column="0" Height="30" VerticalAlignment="Center" Click="BtnLoginEvent" FontSize="14" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Page>
